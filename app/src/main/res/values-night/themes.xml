<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ThemeXML" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorAccent">#FF9800</item>
        <item name="colorPrimaryVariant">#1976D2</item>

        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="fontProviderAuthority">@font/roboto_bold</item>
        <item name="fontProviderFallbackQuery">@font/roboto_bolditalic</item>
        <item name="fontProviderCerts">@font/roboto_italic</item>
        <item name="fontProviderPackage">@font/roboto_lightitalic</item>

        <item name="buttonStyle">@style/RoundedButtonStyle</item>
    </style>

    <style name="Theme.ThemeXML" parent="Base.Theme.ThemeXML" />

    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.RoundedCorners</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="ShapeAppearance.RoundedCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>
</resources>